{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "esnext"],
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "noEmit": true,
      "declaration": true,
      "declarationDir": "build",
      "rootDir": "lib"
    },
    "include": ["lib/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
  }
  